@model UserProfileViewModel

<div class="float-right container pr-5 w-75 mb-4">
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-area="Admin" asp-controller="Account" asp-action="Profile" method="post">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="display-4 text-primary mt-1 mb-2" style="font-size:30px;">Kullanıcı Bilgileri</h6>
                    <div>
                        <a asp-area="Admin" asp-controller="Account" asp-action="ChangePassword" class="btn btn-primary btn-sm">Şifre Değiştir</a>
                    </div>
                </div>
                <hr />
                <div class="row">


                    <div class="col-md-6 mb-4">
                        <div class="form-group">
                            <label class="mb-2" asp-for="User.FirstName"></label>
                            <input class="form-control" asp-for="User.FirstName" />
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-group">
                            <label class="mb-2" asp-for="User.LastName"></label>
                            <input class="form-control" asp-for="User.LastName" />
                        </div>
                    </div>
                    <div class="col-md-12 mb-4">
                        <div class="form-group mb-2">
                            <label class="mb-2" asp-for="User.Address"></label>
                            <textarea class="form-control" asp-for="User.Address"></textarea>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="form-group mb-2">
                            <label class="mb-2" asp-for="User.City"></label>
                            <input class="form-control" asp-for="User.City" />
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="form-group mb-2">
                            <label class="mb-2" asp-for="User.Gender"></label>
                            <select class="form-control" asp-for="User.Gender">
                                <option value="Kadın">Kadın</option>
                                <option value="Erkek">Erkek</option>
                                <option value="Belirtilmedi">Belirtmek istemiyorum</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="form-group mb-2">
                            <label class="mb-2" asp-for="User.UserName"></label>
                            <input class="form-control" asp-for="User.UserName" />
                        </div>
                    </div>


                    <div class="col-md-4 mb-4">
                        <div class="form-group mb-2">
                            <label class="mb-2" asp-for="User.Email"></label>
                            <input class="form-control" asp-for="User.Email" />
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="form-group mb-2">
                            <label class="mb-2" asp-for="User.PhoneNumber"></label>
                            <input class="form-control" asp-for="User.PhoneNumber" />
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="form-group mb-2">
                            <label class="mb-2" asp-for="User.DateOfBirth"></label>
                            @{
                                var year = DateTime.Today.Year - 18;
                                var month = DateTime.Today.Month;
                                string monthString = month < 10 ? "0" + month : month.ToString();
                                var day = DateTime.Today.Day;
                                string dayString = day < 10 ? "0" + day : day.ToString();
                                var maxDate = $"{year}-{monthString}-{dayString}";
                            }
                            <input type="date" min="1950-01-01" max="@maxDate" class="form-control" asp-for="User.DateOfBirth" />
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3 btn-block">Değişiklikleri Kaydet ve Anasayfaya Dön</button>
            </form>
        </div>
    </div>
</div>






