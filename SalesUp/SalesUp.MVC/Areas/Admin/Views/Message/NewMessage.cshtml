@model MessageViewModel

<div class="float-right container pr-5 w-75">
    <h3 class="text-primary">Mesaj Gönder</h3>
    <hr />
    <form asp-area="Admin"
          asp-controller="Message"
          asp-action="NewMessage"
          method="post">
        <div class="row">
            <div class="col-md-12 text-danger" asp-validation-summary="All"></div>

            <div class="col-md-12">
                <div class="form-group mb-2">
                    <label class="text-primary" asp-for="ToName"></label>
                    <select name="ToId" class="form-control" asp-items="@Model.UserList"></select>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group mb-2">
                    <label class="text-primary" asp-for="Text"></label>
                    <textarea class="form-control" style="height: 200px" asp-for="Text"></textarea>
                </div>
            </div>

            <div class="col-md-12 mt-4">
                <a asp-area="Admin" asp-controller="Message" asp-action="Index" class="btn btn-warning text-white">Geri Dön</a>
                <button type="submit" class="btn btn-danger float-right">Mesajı Gönder</button>
            </div>
        </div>
    </form>
</div>