@model UserRolesViewModel

<div class="content w-75 float-right container pr-5">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="d-flex justify-content-between mb-2">
                <div>
                    <h1 class="text-primary ml-5">Kullanıcı/Rol Atama</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="display-6 text-danger mb-4">@Model.Name</h1>
                            <label class="mb-4 text-primary">Kullanıcı Adı: </label>
                            <span class="text-danger">@Model.UserName</span>
                            <h4 class="text-primary">Roller</h4>
                            <form asp-area="Admin"
                                  asp-controller="User"
                                  asp-action="AssignRoles"
                                  method="post">
                                <div class="text-danger" asp-validation-summary="All"></div>
                                <input type="hidden" asp-for="Id" />
                                @for (int i = 0; i < Model.Roles.Count; i++)
                                {
                                    <div class="icheck-primary">
                                        <input asp-for="@Model.Roles[i].IsAssigned" />
                                        <label asp-for="@Model.Roles[i].IsAssigned">@Model.Roles[i].RoleName</label>
                                        <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
                                        <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                    </div>
                                }

                                <a asp-area="Admin"
                                   asp-controller="User"
                                   asp-action="Index"
                                   class="btn btn-warning text-white mt-4">Geri Dön</a>
                                <button type="submit" class="btn btn-primary float-right mt-4">Kullanıcı/Rol Değişikliklerini Kaydet</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


@section Styles {
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/AdminArea/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  
}