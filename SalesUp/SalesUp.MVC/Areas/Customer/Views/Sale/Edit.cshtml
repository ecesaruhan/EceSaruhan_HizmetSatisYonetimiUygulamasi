@model EditSaleViewModel

<div class="row w-75 float-right container float-end pe-5 me-5 my-5">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="text-success pt-2">Satış Bilgilerini Güncelle</h3>
            </div>
            <div class="card-body card-block">
                <form asp-area="Customer"
                      asp-controller="Sale"
                      asp-action="Edit"
                      method="post" class="form-horizontal">


                    <div class="row form-group mb-3">
                        <div class="col col-md-2 text-success"><label asp-for="CustomerName" class=" form-control-label"></label></div>
                        <div class="col-12 col-md-6"><input asp-for="CustomerName" type="text" placeholder="Müşteri Bilgisi Giriniz..." class="form-control"></div>
                        <div class="col-md-3 icheck-warning ml-3">
                            <input asp-for="IsCompleted" type="checkbox" />
                            <label asp-for="IsCompleted" for="IsCompleted"></label>
                        </div>
                    </div>

                    <div class="row form-group mb-3">
                        <div class="col col-md-2 text-success"><label asp-for="ProductName" class=" form-control-label"></label></div>
                        <div class="col-12 col-md-10"><input asp-for="ProductName" type="text" placeholder="Ürün Bilgisi Giriniz..." class="form-control"></div>
                    </div>


                    <div class="row form-group mb-3 mt-2">
                        <div class="col col-md-2 text-success"><label asp-for="Amount" class=" form-control-label">Miktar</label></div>
                        <div class="col-12 col-md-10"><input asp-for="Amount" type="text" placeholder="Ürün Miktarı Giriniz..." class="form-control"></div>
                    </div>


                    <div class="row form-group mb-3 mt-2">
                        <div class="col col-md-2 text-success"><label asp-for="Unit" class=" form-control-label">Birim</label></div>
                        <div class="col-12 col-md-10"><input asp-for="Unit" type="text" placeholder="Ürün Birimi Giriniz..." class="form-control"></div>
                    </div>


                    <div class="row form-group mb-3 mt-2">
                        <div class="col col-md-2 text-success"><label asp-for="UnitPrice" class=" form-control-label">Birim Fiyat</label></div>
                        <div class="col-12 col-md-10"><input asp-for="UnitPrice" type="text" placeholder="Ürünün Birim Fiyatını Giriniz..." class="form-control"></div>
                    </div>

                    <div class="row form-group mb-3 mt-2 d-none">
                        <div class="col col-md-2 text-success"><label asp-for="UserId" class=" form-control-label">Birim Fiyat</label></div>
                        <div class="col-12 col-md-10"><input asp-for="UserId" type="text" placeholder="Ürünün Birim Fiyatını Giriniz..." class="form-control"></div>
                    </div>

                    <div class="row form-group mb-3">
                        <div class="col col-md-2 text-success"><label asp-for="Note" class=" form-control-label"></label></div>
                        <div class="col-12 col-md-10"><textarea asp-for="Note" rows="9" placeholder="Satış Detayını Giriniz..." class="form-control"></textarea></div>
                    </div>

                    <a asp-area="Customer"
                       asp-controller="Sale"
                       asp-action="Index"
                       class="btn btn-warning text-white">Geri Dön</a>
                    <button class="btn btn-success float-end" type="submit">Değişiklikleri Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/AdminArea/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
}