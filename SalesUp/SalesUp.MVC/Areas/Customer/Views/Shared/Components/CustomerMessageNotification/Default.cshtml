@model int

    <a 
        asp-area="Customer"
        asp-controller="Message"
        asp-action="Index"
    class="fa fa-envelope text-primary me-4" style="font-size: 25px">
        @{
            bool isShowCount = Model == 0 ? false : true;
        }
        @if (isShowCount)
        {
            <div class="tip">@Model</div>
        }
    </a>