@model MessageViewModel

<div class="w-75 float-right container float-end pe-5 me-5 my-5">
    <h1 class="display-4 text-danger">Gelen Mesaj</h1>
    <hr />
    <div class="row">
        <div class="col-md-12 mb-2">
            <div class="form-group">
                <label class="text-primary" asp-for="FromName"></label>
                <label>@Model.FromName</label>
            </div>
            <div class="form-group">
                            <label class="text-primary" asp-for="SendingDate"></label>
                            <label>@Model.SendingDate</label>
                        </div>
            <div class="form-group">
                <label class="text-primary" asp-for="Text"></label>
                <label>@Model.Text</label>
            </div>
            
        </div>
        <div class="col-md-12">
            
            <form asp-area="Customer" asp-controller="Message" asp-action="NewMessage" method="post">
                <input type="hidden" value="@Model.FromId" name="ToId" />
                <input type="hidden" value="@Model.Id" name="RelatedId" />
                <div class="form-group mb-2">
                    <label class="text-primary" asp-for="ReplyText"></label>
                    <textarea class="form-control" rows="4" asp-for="ReplyText"></textarea>
                </div>
                <a asp-area="Customer" asp-controller="Message" asp-action="Index" class="btn btn-warning btn-sm text-white">Geri Dön</a>
                <a asp-area="Customer" asp-controller="Message" asp-action="HardDelete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">Mesajı Sil</a>
                <button type="submit" class="btn btn-success btn-sm float-end">Yanıtla</button>
            </form>
            
        </div>
    </div>
</div>
