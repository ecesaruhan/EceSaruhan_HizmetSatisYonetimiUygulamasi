@model List<CustomerViewModel>

<div class="w-75 float-right container float-end pe-5 me-5 my-5">
    <div class="col-sm-12 container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h1 class="mb-0 ms-4 text-primary">Müşter Listesi</h1>
                <div>

                    <a asp-area="Customer"
                       asp-controller="Customer"
                       asp-action="Create"
                       class="fa fa-plus-square text-success mx-4" style="font-size: 30px"></a>
                </div>

            </div>


            @if (Model == null)
            {
                <div class="alert alert-warning mt-3" role="alert">
                    Henüz kayıtlı bir müşteri bulunmamaktadır.
                </div>
            }

            else
            {
                <div class="table-responsive">
                    <table class="table text-start align-middle table-bordered table-hover mb-0">
                        <thead>
                            <tr class="text-primary text-center">

                                <th scope="col">İsim</th>
                                <th scope="col">Soyisim</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">Email</th>
                                <th scope="col">Şirket</th>
                                <th class="text-center" scope="col">#</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var c in Model)
                            {

                                <tr>

                                    <td>@c.FirstName</td>
                                    <td>@c.LastName</td>

                                    <td>@c.PhoneNumber</td>
                                    <td>@c.Email</td>
                                    <td>@c.CompanyName</td>
                                


                                    <td>
                                        <a asp-area="Customer"
                                           asp-controller="Customer"
                                           asp-action="HardDelete"
                                           asp-route-id="@c.Id"
                                           class="fa fa-trash text-danger" style="font-size: 25px; margin-left: 20px"></a>

                                        <a asp-area="Customer"
                                           asp-controller="Customer"
                                           asp-action="Edit"
                                           asp-route-id="@c.Id"
                                           class="fa fa-edit text-warning" style="font-size: 25px; margin-left: 20px"></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            }



        </div>
    </div>
</div>

